{
  "kind": "collectionType",
  "collectionName": "badges",
  "info": {
    "singularName": "badge",
    "pluralName": "badges",
    "displayName": "Badge"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "icon": {
      "type": "string"
    },
    "gradient": {
      "type": "enumeration",
      "enum": [
        "blue",
        "green",
        "purple",
        "orange"
      ]
    },
    "activity": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::activity.activity",
      "mappedBy": "badge"
    },
    "users": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "badges"
    }
  }
}
